<Window x:Class="AdditionalMaterialWpfApp.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdditionalMaterialWpfApp"
        mc:Ignorable="d"
        Title="Добавить клиента" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBox x:Name="LastNameTextBox" Margin="5" Width="350" Text="Фамилия"
                     Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox x:Name="FirstNameTextBox" Margin="5" Width="350" Text="Имя"
                     Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox x:Name="MiddleNameTextBox" Margin="5" Width="350" Text="Отчество"
                     Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox x:Name="PhoneNumberTextBox" Margin="5" Width="350" Text="Номер телефона"
                     Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <Button Content="Добавить клиента" Click="AddButton_Click" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
